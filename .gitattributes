# utwórz plik .gitattributes (jeśli go nie masz)
@"
* text=auto eol=lf

# Windowsowe skrypty zostają w CRLF
*.ps1 text eol=crlf
*.cmd text eol=crlf
*.bat text eol=crlf

# Binaria
*.png binary
*.jpg binary
*.jpeg binary
*.pdf binary
*.zip binary
*.rar binary
"@ | Set-Content -Encoding UTF8 .gitattributes

git add .gitattributes
git commit -m "chore: enforce LF endings via .gitattributes"
